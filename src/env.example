# WordPress API Configuration
REACT_APP_WP_API_URL=https://admin.theignitingstudio.com
REACT_APP_WP_SITE_URL=https://theignitingstudio.com

# Environment Configuration
REACT_APP_ENVIRONMENT=development
NODE_ENV=development

# WordPress Features
REACT_APP_USE_WORDPRESS=true
REACT_APP_ENABLE_BLOG=true
REACT_APP_ENABLE_COMMENTS=false
REACT_APP_SHOW_WP_STATUS=true

# Contact Form Configuration (Contact Form 7 ID from WordPress)
REACT_APP_CONTACT_FORM_ID=1

# Analytics & Tracking
REACT_APP_GA_TRACKING_ID=your-google-analytics-id
REACT_APP_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# Security & Performance
REACT_APP_ENABLE_CACHING=true
REACT_APP_CACHE_EXPIRY=300000

# Multi-language
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,hu

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_SHOW_ERRORS=true